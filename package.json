{
  "name": "delete-publishconfig-directory",
  "version": "0.0.0-semantic-release",
  "description": "Deletes the directory field from publishConfig.",
  "author": "Richard Harrah",
  "license": "MIT",
  "packageManager": "pnpm@7.27.0",
  "engines": {
    "node": "^14 || ^16 || >=18"
  },
  "bin": "./bin/delete-publishconfig-directory.js",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "keywords": [
    "delete",
    "publishconfig",
    "publish",
    "changesets",
    "clean-publish"
  ],
  "scripts": {
    "analyze": "size-limit --why",
    "build": "tsup",
    "clean": "rimraf dist",
    "dev": "tsup --watch",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "eslint --format stylish --max-warnings 0 --cache .",
    "postpublish": "rm -rf ./package",
    "prepare": "is-ci || husky install",
    "prepublishOnly": "rm -rf ./package && tsup && clean-publish",
    "pretty-quick": "pretty-quick --staged",
    "release": "release-it",
    "size": "size-limit"
  },
  "devDependencies": {
    "@release-it/conventional-changelog": "5.1.1",
    "@tsconfig/node-lts-strictest": "18.12.1",
    "@types/node": "18.13.0",
    "@typescript-eslint/eslint-plugin": "5.62.0",
    "@typescript-eslint/parser": "5.62.0",
    "clean-publish": "4.1.1",
    "eslint": "8.34.0",
    "eslint-plugin-simple-import-sort": "10.0.0",
    "husky": "8.0.3",
    "is-ci": "3.0.1",
    "prettier": "2.8.4",
    "prettier-plugin-pkg": "0.17.1",
    "pretty-quick": "3.3.1",
    "release-it": "15.6.0",
    "rimraf": "4.1.2",
    "size-limit": "8.1.2",
    "size-limit-preset-node-lib": "0.2.0",
    "tsup": "6.7.0",
    "typescript": "4.9.5"
  },
  "publishConfig": {
    "directory": "package"
  },
  "clean-publish": {
    "withoutPublish": true,
    "tempDir": "package"
  },
  "prettier": {
    "plugins": [
      "prettier-plugin-pkg"
    ]
  },
  "size-limit": [
    {
      "path": "./dist/index.js",
      "limit": "10 KB"
    },
    {
      "path": "./dist/index.mjs",
      "limit": "10 KB"
    }
  ]
}
